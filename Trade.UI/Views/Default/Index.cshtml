<body>
    <!-- ***** Preloader End ***** -->
    <!-- ***** Products Area Starts ***** -->
    <section class="section" id="products">
        <div class="container" style="margin-top:30px">
            <div class="row">
                <div class="col-lg-12">
                    <div class="section-heading">
                        <h2>Our Latest Products</h2>
                        <span>Check out all of our products.</span>
                    </div>
                </div>
            </div>
        </div>

        <div class="container">
            <div class="row">
                @foreach (var u in Model)
                {
                    <div class="col-lg-4">
                        <div class="item" data-urunid="@u.Urunum.ID">
                            <div class="thumb">
                                <img src="@u.Resimler.Resim">
                                <div class="hover-content">
                                    <ul>
                                        <li><a asp-controller="Product" asp-action="Detail" asp-route-name="@GeneralTools.GetUrl(u.Urunum.Urun_Adi)" asp-route-id="@u.Urunum.ID"><i class="fa fa-shopping-cart"></i></a></li>
                                    </ul>
                                </div>
                            </div>
                            <div class="down-content">
                                <h4>@u.Urunum.Urun_Adi</h4>
                                <h6>@u.Urunum.Urun_Fiyat</h6>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>
