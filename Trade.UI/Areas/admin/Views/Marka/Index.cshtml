@model IQueryable<Marka>
<!DOCTYPE html>
<html lang="tr">
<body class="sb-nav-fixed">
    <div id="layoutSidenav" class="right_col" role="main">
        <div id="layoutSidenav_content">
            <div>
                <div class="clearfix"></div>

                <div class="row" style="display: block;">

                    <div class="col-md-12 col-sm-12  ">
                        <div class="x_panel">
                            <div class="col-md-6 col-sm-6  ">
                                <h2>Marka Yönetimi</h2>
                            </div>
                            <div class="col-md-6 col-sm-6  ">
                                <a asp-controller="Marka" asp-action="New" class="btn btn-success float-right">
                                    Yeni Marka
                                </a>
                            </div>

                            <div class="x_content">
                                <div class="table-responsive">
                                    <table class="table table-striped jambo_table bulk_action">
                                        <thead>
                                            <tr class="headings">
                                                <th class="column-title">Marka Adı </th>
                                                <th></th>
                                            </tr>
                                        </thead>

                                        <tbody>
                                            @foreach (Marka m in Model)
                                            {
                                                <tr class="even pointer">

                                                    <td class=" "><a asp-controller="Marka" asp-action="Edit" asp-route-id="@m.ID">@m.Ad</a></td>
                                                    <td><a asp-controller="Marka" asp-action="Delete" asp-route-id="@m.ID" class="btn btn-danger">Sil</a></td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
