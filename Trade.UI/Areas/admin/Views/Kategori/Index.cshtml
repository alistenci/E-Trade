@model IQueryable<Kategori>
<!DOCTYPE html>
<html lang="tr">
<body class="sb-nav-fixed">
    <div id="layoutSidenav" class="right_col" role="main">
        <div id="layoutSidenav_content">
                <div>
                        <div class="clearfix"></div>

                        <div class="row" style="display: block;">

                            <div class="col-md-12 col-sm-12  ">
                                <div class="x_panel">
                                    <div class="col-md-6 col-sm-6  ">
                                        <h2>Kategori Yönetimi</h2>
                                    </div>
                                    <div class="col-md-6 col-sm-6  ">
                                        <a asp-controller="Kategori" asp-action="New" class="btn btn-success float-right">
                                            Yeni Kategori
                                        </a>
                                    </div>

                                    <div class="x_content">
                                        <div class="table-responsive">
                                            <table class="table table-striped jambo_table bulk_action">
                                                <thead>
                                                    <tr class="headings">
                                                        <th class="column-title">Kategori Adı </th>
                                                        <th class="column-title">Sıra </th>
                                                        <th></th>
                                                    </tr>
                                                </thead>

                                                <tbody>
                                                    @foreach (Kategori s in Model)
                                                    {
                                                        <tr class="even pointer">

                                                            <td class=" "><a asp-controller="Kategori" asp-action="Edit" asp-route-id="@s.ID">
                                                                @if (s.ParentID == null)
                                                            {
                                                                @s.Name
                                                            }
                                                            else
                                                            {
                                                                @s.ParentCategory.Name

                                                                <span> &#8250;</span> @s.Name
                                                            }
                                                                
                                                                </a></td>
                                                            <td class=" ">@s.DisplayIndex</td>
                                                            <td><a asp-controller="Kategori" asp-action="Delete" asp-route-id="@s.ID" class="btn btn-danger">Sil</a></td>
                                                        </tr>
                                                    }

                                                </tbody>
                                            </table>
                                        </div>


                                    </div>
                                </div>
                            </div>
                        </div>
                </div>
        </div>
    </div>
</body>
</html>
