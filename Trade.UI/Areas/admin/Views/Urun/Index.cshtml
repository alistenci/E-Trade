@model IQueryable<Urun>
<!DOCTYPE html>
<html lang="tr">
<body class="sb-nav-fixed">
    <div id="layoutSidenav" class="right_col" role="main">
        <div id="layoutSidenav_content">
            <div>
                <div class="clearfix"></div>

                <div class="row" style="display: block;">

                    <div class="col-md-12 col-sm-12  ">
                        <div class="x_panel">
                            <div class="col-md-6 col-sm-6  ">
                                <h2>Ürün Yönetimi</h2>
                            </div>
                            <div class="col-md-6 col-sm-6  ">
                                <a asp-controller="Urun" asp-action="New" class="btn btn-success float-right">
                                    Yeni Ürün
                                </a>
                            </div>

                            <div class="x_content">
                                <div class="table-responsive">
                                    <table class="table table-striped jambo_table bulk_action">
                                        <thead>
                                            <tr class="headings">
                                                <th class="column-title">Ürün Adı </th>
                                                <th class="column-title">Fiyat </th>
                                                <th class="column-title">Stok Miktarı </th>
                                                <th class="column-title">Sıra </th>
                                                <th class="column-title"> </th>
                                                <th></th>
                                            </tr>
                                        </thead>

                                        <tbody>
                                            @foreach (Urun u in Model)
                                            {
                                                <tr class="even pointer">

                                                    <td class=" "><a asp-controller="Urun" asp-action="Edit" asp-route-id="@u.ID">@u.Urun_Adi</a></td>
                                                    <td class=" ">@u.Urun_Fiyat </td>
                                                    <td class=" ">@u.Stok</td>
                                                    <td class=" ">@u.DisplayIndex</td>
                                                    <td class=" "><a asp-controller="UrunResimEklee" asp-action="Index" asp-route-urunid="@u.ID">Ürün Resimleri</a></td>
                                                    <td><a asp-controller="Urun" asp-action="Delete" asp-route-id="@u.ID" class="btn btn-danger">Sil</a></td>
                                                </tr>
                                            }

                                        </tbody>
                                    </table>
                                </div>


                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
